#include <iostream>

using namespace std;

int main()

{
	/*
	 *
   **
   ***
   ****
	*/ 

	
	    cout << "ters dik ucgen yazdiralim " << endl;
	        int kac;
	    cin >> kac;
	
	for (int i = 1; i <= kac; i++) {
		for (int k = 1; k < kac ; k++) {
			cout << " ";
		}
		for (int j = 1; j <= kac-i+1; j++) {
			cout << "*";
		}
		cout << endl;
	}
	return 0;
}
